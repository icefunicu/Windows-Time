<UserControl x:Class="ScreenTimeWin.App.Views.AppUsageDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ScreenTimeWin.App"
             xmlns:p="clr-namespace:ScreenTimeWin.App.Properties"
             mc:Ignorable="d"
             d:DesignHeight="550" d:DesignWidth="700"
             Background="{DynamicResource WindowBackgroundBrush}">

    <Grid>
        <!-- ä¸»å†…å®¹ -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- é¡µé¢æ ‡é¢˜ -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ“Š" FontSize="24" VerticalAlignment="Center"/>
                    <TextBlock Text="{x:Static p:Resources.AppUsageTitle}" FontSize="24" FontWeight="Bold" Margin="10,0,0,0" 
                               Foreground="{DynamicResource PrimaryTextBrush}"/>
                </StackPanel>
                
                <Button Grid.Column="2" Command="{Binding NavigateToLimitsCommand}" 
                        Content="{x:Static p:Resources.UsageLimitsTitle}"
                        Background="Transparent" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"
                        Padding="12,6" Foreground="{DynamicResource PrimaryTextBrush}" Cursor="Hand">
                     <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="6" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Padding="{TemplateBinding Padding}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="â±ï¸" Margin="0,0,6,0"/>
                                    <ContentPresenter/>
                                </StackPanel>
                            </Border>
                             <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <!-- App List -->
            <Border Grid.Row="2" Style="{DynamicResource CardStyle}" Padding="0,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Grid Margin="20,10,20,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="App" FontWeight="SemiBold" Foreground="{DynamicResource SecondaryTextBrush}"/>
                        <TextBlock Grid.Column="1" Text="{x:Static p:Resources.Today}" HorizontalAlignment="Right" FontWeight="SemiBold" Foreground="{DynamicResource SecondaryTextBrush}"/>
                        <TextBlock Grid.Column="2" Text="{x:Static p:Resources.SevenDayAvg}" HorizontalAlignment="Right" FontWeight="SemiBold" Foreground="{DynamicResource SecondaryTextBrush}"/>
                    </Grid>
                    
                    <Border Height="1" Background="{DynamicResource DividerBrush}" Margin="0,0,0,10" Grid.Row="0" VerticalAlignment="Bottom"/>

                    <!-- List -->
                    <Grid Grid.Row="1">
                        <!-- åŠ è½½æŒ‡ç¤ºå™¨ -->
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                                    Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="â³" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,12"/>
                            <TextBlock Text="{x:Static p:Resources.Loading}" FontSize="14" 
                                       Foreground="{DynamicResource SecondaryTextBrush}" HorizontalAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- ç©ºçŠ¶æ€å¼•å¯¼ -->
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="280"
                                    Visibility="{Binding HasNoData, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="ðŸ“Š" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                            <TextBlock Text="{x:Static p:Resources.NoDataTitle}" FontSize="16" FontWeight="SemiBold"
                                       Foreground="{DynamicResource PrimaryTextBrush}" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock Text="{x:Static p:Resources.NoDataHint}" FontSize="13" TextWrapping="Wrap" TextAlignment="Center"
                                       Foreground="{DynamicResource SecondaryTextBrush}" HorizontalAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- åº”ç”¨åˆ—è¡¨ -->
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="12,0">
                            <ScrollViewer.Style>
                                <Style TargetType="ScrollViewer">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding HasNoData}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ScrollViewer.Style>
                            <ItemsControl ItemsSource="{Binding AppList}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="Transparent" CornerRadius="8" Margin="0,2" Padding="8,12" Cursor="Hand">
                                        <Border.InputBindings>
                                            <MouseBinding MouseAction="LeftClick" 
                                                          Command="{Binding DataContext.SelectAppCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                          CommandParameter="{Binding}"/>
                                        </Border.InputBindings>
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="100"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- App Info -->
                                            <StackPanel Orientation="Horizontal">
                                                <Border Width="36" Height="36" CornerRadius="10" Background="{Binding CategoryColor}" Margin="0,0,16,0">
                                                    <TextBlock Text="{Binding DisplayName, Converter={StaticResource FirstCharConverter}, FallbackValue=A}" 
                                                               HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontWeight="Bold" FontSize="16"/>
                                                </Border>
                                                <TextBlock Text="{Binding DisplayName}" FontWeight="Medium" FontSize="15" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryTextBrush}"/>
                                            </StackPanel>
                                            
                                            <!-- Stats -->
                                            <TextBlock Grid.Column="1" Text="{Binding TodayText}" HorizontalAlignment="Right" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryTextBrush}"/>
                                            <TextBlock Grid.Column="2" Text="{Binding SevenDayAvgText}" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="{DynamicResource SecondaryTextBrush}"/>
                                            
                                            <!-- Progress Bars -->
                                            <Grid Grid.Row="1" Grid.ColumnSpan="3" Margin="52,12,0,4" Height="4">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="12"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <Border Background="{DynamicResource ProgressBackgroundBrush}" CornerRadius="2">
                                                    <Border Background="{DynamicResource AccentBrush}" CornerRadius="2" HorizontalAlignment="Left" Width="{Binding TodayPercent, Converter={StaticResource PercentToWidthConverter}}"/>
                                                </Border>
                                                
                                                <Border Grid.Column="2" Background="{DynamicResource ProgressBackgroundBrush}" CornerRadius="2">
                                                    <Border Background="{DynamicResource WarningBrush}" CornerRadius="2" HorizontalAlignment="Left" Width="{Binding SevenDayPercent, Converter={StaticResource PercentToWidthConverter}}"/>
                                                </Border>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- è¯¦æƒ…å¼¹çª—é®ç½© -->
        <Border Background="#80000000" Visibility="{Binding IsDetailPopupVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                MouseDown="Overlay_MouseDown"/>

        <!-- åº”ç”¨è¯¦æƒ…å¼¹çª— -->
        <Border Background="{DynamicResource CardBackgroundBrush}" 
                CornerRadius="12" Width="300" Height="Auto" MaxHeight="450"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Visibility="{Binding IsDetailPopupVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                Effect="{DynamicResource CardShadow}">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- å…³é—­æŒ‰é’® -->
                <Button Content="âœ•" HorizontalAlignment="Right" VerticalAlignment="Top"
                        Margin="0,-5,-5,0" Width="24" Height="24" Padding="0"
                        Background="Transparent" Foreground="{DynamicResource SecondaryTextBrush}"
                        Command="{Binding CloseDetailPopupCommand}" Cursor="Hand"/>

                <!-- åº”ç”¨å›¾æ ‡å’Œåç§° -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Border Width="40" Height="40" CornerRadius="8" Background="#EA4335">
                        <TextBlock Text="â–¶" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                   Foreground="White"/>
                    </Border>
                    <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="{Binding SelectedAppDetail.DisplayName}" 
                                   FontWeight="Bold" FontSize="16" Foreground="{DynamicResource PrimaryTextBrush}"/>
                        <TextBlock Text="{Binding SelectedAppDetail.TodayText}" 
                                   FontSize="20" FontWeight="Bold" Foreground="{DynamicResource AccentBrush}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Recent Sessions -->
                <StackPanel Grid.Row="1" Margin="0,20,0,0">
                    <TextBlock Text="{x:Static p:Resources.RecentSessions}" FontWeight="SemiBold" Margin="0,0,0,10"
                               Foreground="{DynamicResource PrimaryTextBrush}"/>
                    
                    <ItemsControl ItemsSource="{Binding SelectedAppDetail.RecentSessions}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Text="{Binding DateLabel}" 
                                               Foreground="{DynamicResource SecondaryTextBrush}"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Duration}" 
                                               Foreground="{DynamicResource PrimaryTextBrush}"/>
                                    <TextBlock Grid.Column="2" Text="{Binding StartTime}" 
                                               Foreground="{DynamicResource SecondaryTextBrush}"/>
                                    <TextBlock Grid.Column="3" Text="â†—" Foreground="{DynamicResource AccentBrush}" 
                                               Cursor="Hand"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <!-- Top Titles -->
                <StackPanel Grid.Row="2" Margin="0,15,0,0">
                    <TextBlock Text="{x:Static p:Resources.TopTitles}" FontWeight="SemiBold" Margin="0,0,0,5"
                               Foreground="{DynamicResource PrimaryTextBrush}"/>
                    <WrapPanel>
                        <ItemsControl ItemsSource="{Binding SelectedAppDetail.TopTitles}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#E8F0FE" CornerRadius="4" Padding="8,4" Margin="0,0,6,0">
                                        <TextBlock Text="{Binding}" Foreground="#1967D2" FontSize="12"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </WrapPanel>
                </StackPanel>

                <!-- æ“ä½œæŒ‰é’® -->
                <StackPanel Grid.Row="3" Margin="0,20,0,0">
                    <Button Content="{x:Static p:Resources.SetDailyLimit}" 
                            Background="{DynamicResource AccentBrush}" Foreground="White"
                            Padding="15,10" FontWeight="SemiBold"
                            Command="{Binding SetDailyLimitCommand}"/>
                </StackPanel>

                <StackPanel Grid.Row="4" Margin="0,10,0,0">
                    <Button Content="{x:Static p:Resources.BlockInFocus}" 
                            Background="Transparent" 
                            Foreground="{DynamicResource PrimaryTextBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1" Padding="15,8"
                            Command="{Binding BlockInFocusCommand}"/>
                </StackPanel>

                <StackPanel Grid.Row="5" Margin="0,10,0,0">
                    <Button Content="{x:Static p:Resources.AlwaysAllow}" 
                            Background="Transparent" 
                            Foreground="{DynamicResource PrimaryTextBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1" Padding="15,8"
                            Command="{Binding AlwaysAllowCommand}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
