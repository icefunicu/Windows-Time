<UserControl x:Class="ScreenTimeWin.App.Views.AppUsageDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ScreenTimeWin.App"
             mc:Ignorable="d"
             d:DesignHeight="550" d:DesignWidth="700"
             Background="{DynamicResource WindowBackgroundBrush}">

    <Grid>
        <!-- ä¸»å†…å®¹ -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- é¡µé¢æ ‡é¢˜ -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <TextBlock Text="ðŸ“Š" FontSize="24" VerticalAlignment="Center"/>
                <TextBlock Text="App Usage" FontSize="24" FontWeight="Bold" Margin="10,0,0,0" 
                           Foreground="{DynamicResource PrimaryTextBrush}"/>
            </StackPanel>

            <!-- åˆ—è¡¨è¡¨å¤´ -->
            <Grid Grid.Row="1" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="App" FontWeight="SemiBold" 
                           Foreground="{DynamicResource SecondaryTextBrush}"/>
                <TextBlock Grid.Column="1" Text="Today" HorizontalAlignment="Right" FontWeight="SemiBold"
                           Foreground="{DynamicResource SecondaryTextBrush}"/>
                <TextBlock Grid.Column="2" Text="7-Day Avg." HorizontalAlignment="Right" FontWeight="SemiBold"
                           Foreground="{DynamicResource SecondaryTextBrush}"/>
            </Grid>

            <!-- åº”ç”¨åˆ—è¡¨ -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding AppList}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource CardBackgroundBrush}" 
                                    CornerRadius="8" Margin="0,0,0,8" Padding="15"
                                    Cursor="Hand">
                                <Border.InputBindings>
                                    <MouseBinding MouseAction="LeftClick" 
                                                  Command="{Binding DataContext.SelectAppCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                  CommandParameter="{Binding}"/>
                                </Border.InputBindings>
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- åº”ç”¨ä¿¡æ¯ -->
                                    <StackPanel Orientation="Horizontal">
                                        <!-- åº”ç”¨å›¾æ ‡å ä½ -->
                                        <Border Width="32" Height="32" CornerRadius="4" 
                                                Background="{Binding CategoryColor}" Margin="0,0,12,0">
                                            <TextBlock Text="{Binding DisplayName, Converter={StaticResource FirstCharConverter}, FallbackValue=A}" 
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                                       Foreground="White" FontWeight="Bold"/>
                                        </Border>
                                        <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold" FontSize="14"
                                                   VerticalAlignment="Center" Foreground="{DynamicResource PrimaryTextBrush}"/>
                                    </StackPanel>
                                    
                                    <!-- ä»Šæ—¥æ—¶é•¿ -->
                                    <TextBlock Grid.Column="1" Text="{Binding TodayText}" 
                                               HorizontalAlignment="Right" VerticalAlignment="Center"
                                               FontWeight="SemiBold" Foreground="{DynamicResource PrimaryTextBrush}"/>
                                    
                                    <!-- 7æ—¥å¹³å‡ -->
                                    <TextBlock Grid.Column="2" Text="{Binding SevenDayAvgText}" 
                                               HorizontalAlignment="Right" VerticalAlignment="Center"
                                               Foreground="{DynamicResource SecondaryTextBrush}"/>
                                    
                                    <!-- è¿›åº¦æ¡ -->
                                    <Grid Grid.Row="1" Grid.ColumnSpan="3" Margin="44,8,0,0" Height="6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Todayè¿›åº¦ -->
                                        <Border Background="#E0E0E0" CornerRadius="3">
                                            <Border Background="#4285F4" CornerRadius="3" 
                                                    HorizontalAlignment="Left"
                                                    Width="{Binding TodayPercent, Converter={StaticResource PercentToWidthConverter}}"/>
                                        </Border>
                                        
                                        <!-- 7-Dayè¿›åº¦ -->
                                        <Border Grid.Column="2" Background="#E0E0E0" CornerRadius="3">
                                            <Border Background="#FFA726" CornerRadius="3" 
                                                    HorizontalAlignment="Left"
                                                    Width="{Binding SevenDayPercent, Converter={StaticResource PercentToWidthConverter}}"/>
                                        </Border>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <!-- è¯¦æƒ…å¼¹çª—é®ç½© -->
        <Border Background="#80000000" Visibility="{Binding IsDetailPopupVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                MouseDown="Overlay_MouseDown"/>

        <!-- åº”ç”¨è¯¦æƒ…å¼¹çª— -->
        <Border Background="{DynamicResource CardBackgroundBrush}" 
                CornerRadius="12" Width="300" Height="Auto" MaxHeight="450"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Visibility="{Binding IsDetailPopupVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                Effect="{DynamicResource CardShadow}">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- å…³é—­æŒ‰é’® -->
                <Button Content="âœ•" HorizontalAlignment="Right" VerticalAlignment="Top"
                        Margin="0,-5,-5,0" Width="24" Height="24" Padding="0"
                        Background="Transparent" Foreground="{DynamicResource SecondaryTextBrush}"
                        Command="{Binding CloseDetailPopupCommand}" Cursor="Hand"/>

                <!-- åº”ç”¨å›¾æ ‡å’Œåç§° -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Border Width="40" Height="40" CornerRadius="8" Background="#EA4335">
                        <TextBlock Text="â–¶" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                   Foreground="White"/>
                    </Border>
                    <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="{Binding SelectedAppDetail.DisplayName}" 
                                   FontWeight="Bold" FontSize="16" Foreground="{DynamicResource PrimaryTextBrush}"/>
                        <TextBlock Text="{Binding SelectedAppDetail.TodayText}" 
                                   FontSize="20" FontWeight="Bold" Foreground="{DynamicResource AccentBrush}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Recent Sessions -->
                <StackPanel Grid.Row="1" Margin="0,20,0,0">
                    <TextBlock Text="Recent Sessions" FontWeight="SemiBold" Margin="0,0,0,10"
                               Foreground="{DynamicResource PrimaryTextBrush}"/>
                    
                    <ItemsControl ItemsSource="{Binding SelectedAppDetail.RecentSessions}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Text="{Binding DateLabel}" 
                                               Foreground="{DynamicResource SecondaryTextBrush}"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Duration}" 
                                               Foreground="{DynamicResource PrimaryTextBrush}"/>
                                    <TextBlock Grid.Column="2" Text="{Binding StartTime}" 
                                               Foreground="{DynamicResource SecondaryTextBrush}"/>
                                    <TextBlock Grid.Column="3" Text="â†—" Foreground="{DynamicResource AccentBrush}" 
                                               Cursor="Hand"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <!-- Top Titles -->
                <StackPanel Grid.Row="2" Margin="0,15,0,0">
                    <TextBlock Text="Top Titles:" FontWeight="SemiBold" Margin="0,0,0,5"
                               Foreground="{DynamicResource PrimaryTextBrush}"/>
                    <WrapPanel>
                        <ItemsControl ItemsSource="{Binding SelectedAppDetail.TopTitles}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#E8F0FE" CornerRadius="4" Padding="8,4" Margin="0,0,6,0">
                                        <TextBlock Text="{Binding}" Foreground="#1967D2" FontSize="12"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </WrapPanel>
                </StackPanel>

                <!-- æ“ä½œæŒ‰é’® -->
                <StackPanel Grid.Row="3" Margin="0,20,0,0">
                    <Button Content="ðŸ• Set Daily Limit" 
                            Background="{DynamicResource AccentBrush}" Foreground="White"
                            Padding="15,10" FontWeight="SemiBold"
                            Command="{Binding SetDailyLimitCommand}"/>
                </StackPanel>

                <StackPanel Grid.Row="4" Margin="0,10,0,0">
                    <Button Content="âž• Block in Focus" 
                            Background="Transparent" 
                            Foreground="{DynamicResource PrimaryTextBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1" Padding="15,8"
                            Command="{Binding BlockInFocusCommand}"/>
                </StackPanel>

                <StackPanel Grid.Row="5" Margin="0,10,0,0">
                    <Button Content="ðŸ‘¤ Always Allow" 
                            Background="Transparent" 
                            Foreground="{DynamicResource PrimaryTextBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1" Padding="15,8"
                            Command="{Binding AlwaysAllowCommand}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
