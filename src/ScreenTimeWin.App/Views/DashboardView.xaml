<UserControl x:Class="ScreenTimeWin.App.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScreenTimeWin.App.Views"
             xmlns:vm="clr-namespace:ScreenTimeWin.App.ViewModels"
             xmlns:p="clr-namespace:ScreenTimeWin.App.Properties"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="900"
             Background="{DynamicResource WindowBackgroundBrush}">

    <Grid>
        <Grid.Resources>
            <Storyboard x:Key="LoadAnimation">
                <DoubleAnimation Storyboard.TargetName="MainContent" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.4">
                     <DoubleAnimation.EasingFunction>
                        <CubicEase EasingMode="EaseOut"/>
                     </DoubleAnimation.EasingFunction>
                </DoubleAnimation>
                <DoubleAnimation Storyboard.TargetName="MainTransform" Storyboard.TargetProperty="Y" From="20" To="0" Duration="0:0:0.4">
                     <DoubleAnimation.EasingFunction>
                        <CubicEase EasingMode="EaseOut"/>
                     </DoubleAnimation.EasingFunction>
                </DoubleAnimation>
            </Storyboard>
        </Grid.Resources>
        <Grid.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard Storyboard="{StaticResource LoadAnimation}"/>
            </EventTrigger>
        </Grid.Triggers>

        <!-- åŠ è½½æŒ‡ç¤ºå™¨è¦†ç›–å±‚ -->
        <Border Background="{DynamicResource WindowBackgroundBrush}" Panel.ZIndex="100">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="ðŸ•" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                <TextBlock Text="{x:Static p:Resources.Loading}" FontSize="16" Foreground="{DynamicResource SecondaryTextBrush}" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <Border x:Name="MainContent" Padding="20" Opacity="0" Margin="0,0,0,20">
                <Border.RenderTransform>
                    <TranslateTransform x:Name="MainTransform"/>
                </Border.RenderTransform>
                
                <Grid MaxWidth="1180" HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- Summary Header -->
                <RowDefinition Height="400"/>    <!-- Main Chart -->
                <RowDefinition Height="Auto"/>    <!-- Bottom Area -->
            </Grid.RowDefinitions>

            <!-- 1. Summary Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,24">
                <TextBlock Text="{x:Static p:Resources.Dashboard}" FontSize="28" FontWeight="Bold" Margin="0,0,0,8" Foreground="{DynamicResource PrimaryTextBrush}"/>
                
                <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
                     <TextBlock Text="{Binding TotalTimeText}" FontSize="56" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextBrush}"/>
                     <!-- Growth Pill -->
                     <Border Background="#E6F4EA" CornerRadius="16" Height="32" Padding="12,0" Margin="16,0,0,12" VerticalAlignment="Bottom">
                          <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                              <TextBlock Text="â–²" FontSize="12" Foreground="{DynamicResource SuccessBrush}" Margin="0,1,6,0"/>
                              <TextBlock Text="{Binding GrowthText}" FontSize="13" FontWeight="SemiBold" Foreground="{DynamicResource SuccessBrush}"/>
                          </StackPanel>
                     </Border>
                </StackPanel>
                <TextBlock Text="{x:Static p:Resources.Today}" FontSize="16" Foreground="{DynamicResource SecondaryTextBrush}" Margin="2,0,0,0"/>
            </StackPanel>

            <!-- 2. Main Chart Card -->
            <Border Grid.Row="1" Style="{DynamicResource CardStyle}">
                <Grid>
                     <Grid.RowDefinitions>
                         <RowDefinition Height="Auto"/>
                         <RowDefinition Height="*"/>
                     </Grid.RowDefinitions>
                     
                     <!-- Header with Tabs -->
                     <Grid Margin="0,0,0,16">
                         <Grid.ColumnDefinitions>
                             <ColumnDefinition Width="*"/>
                             <ColumnDefinition Width="Auto"/>
                         </Grid.ColumnDefinitions>
                         
                         <TextBlock Text="Activity" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>

                         <!-- Tabs -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                             <StackPanel.Resources>
                                <Style TargetType="Border" x:Key="TabButtonStyle">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="CornerRadius" Value="16"/>
                                    <Setter Property="Padding" Value="14,6"/>
                                    <Setter Property="Margin" Value="8,0,0,0"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="TextBlock.FontWeight" Value="Normal"/>
                                    <Setter Property="TextBlock.Foreground" Value="{DynamicResource SecondaryTextBrush}"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F5F5F7"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                                 <Style TargetType="Border" x:Key="ActiveTabButtonStyle" BasedOn="{StaticResource TabButtonStyle}">
                                     <Setter Property="Background" Value="{DynamicResource TabActiveBackgroundBrush}"/>
                                     <Setter Property="TextBlock.FontWeight" Value="SemiBold"/>
                                     <Setter Property="TextBlock.Foreground" Value="{DynamicResource TabActiveTextBrush}"/>
                                 </Style>
                             </StackPanel.Resources>
                            
                            <!-- Today æ ‡ç­¾ -->
                            <Border Style="{StaticResource ActiveTabButtonStyle}">
                                <Border.InputBindings>
                                     <MouseBinding MouseAction="LeftClick" Command="{Binding SwitchChartCommand}" CommandParameter="Today"/>
                                </Border.InputBindings>
                                <TextBlock Text="{x:Static p:Resources.Today}" FontSize="13"/>
                            </Border>
                            <!-- å…¶ä»–æ ‡ç­¾ -->
                            <Border Style="{StaticResource TabButtonStyle}">
                                 <Border.InputBindings>
                                     <MouseBinding MouseAction="LeftClick" Command="{Binding SwitchChartCommand}" CommandParameter="TotalTime"/>
                                </Border.InputBindings>
                                <TextBlock Text="{x:Static p:Resources.TotalTime}" FontSize="13"/>
                            </Border>
                        </StackPanel>
                     </Grid>

                     <!-- é¢ç§¯å›¾ -->
                     <lvc:CartesianChart Grid.Row="1" Series="{Binding HourlySeries}" 
                                         XAxes="{Binding XAxes}" YAxes="{Binding YAxes}" 
                                         TooltipPosition="Top" ZoomMode="None"/>
                </Grid>
            </Border>

            <!-- 3. Bottom Area -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                     <ColumnDefinition Width="*"/> <!-- Weekly Report -->
                     <ColumnDefinition Width="20"/>
                     <ColumnDefinition Width="350"/> <!-- Top Apps -->
                </Grid.ColumnDefinitions>

                <!-- Left: Weekly Report CTA -->
                <Button Grid.Column="0" Command="{Binding NavigateToWeeklyReportCommand}" 
                        Padding="0" Margin="{StaticResource CardMargin}"
                        Cursor="Hand" BorderThickness="0">
                     <Button.Template>
                         <ControlTemplate TargetType="Button">
                             <Border Background="{DynamicResource AccentBrush}" CornerRadius="{StaticResource CardCornerRadius}" Padding="24">
                                 <Border.Effect>
                                     <DropShadowEffect Color="{DynamicResource AccentColor}" Opacity="0.3" BlurRadius="20" ShadowDepth="5" Direction="270"/>
                                 </Border.Effect>
                                 <Grid>
                                     <Grid.ColumnDefinitions>
                                         <ColumnDefinition Width="*"/>
                                         <ColumnDefinition Width="Auto"/>
                                     </Grid.ColumnDefinitions>
                                     
                                     <StackPanel VerticalAlignment="Center">
                                          <TextBlock Text="{x:Static p:Resources.WeeklyReport}" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,4"/>
                                          <TextBlock Text="{x:Static p:Resources.WeeklyInsightsReady}" FontSize="14" Foreground="#CCFFFFFF" TextWrapping="Wrap"/>
                                          <Border Background="#33FFFFFF" HorizontalAlignment="Left" CornerRadius="16" Padding="12,6" Margin="0,16,0,0">
                                              <TextBlock Text="{x:Static p:Resources.ViewReport}" Foreground="White" FontWeight="SemiBold" FontSize="13"/>
                                          </Border>
                                     </StackPanel>

                                     <!-- Icon -->
                                     <TextBlock Grid.Column="1" Text="ðŸ“…" FontSize="64" Opacity="0.2" VerticalAlignment="Center" Margin="20,0,0,0"/>
                                 </Grid>
                             </Border>
                         </ControlTemplate>
                     </Button.Template>
                </Button>

                <!-- Right: Top Apps (Mini) -->
                <Border Grid.Column="2" Style="{DynamicResource CardStyle}">
                     <Grid>
                         <Grid.RowDefinitions>
                             <RowDefinition Height="Auto"/>
                             <RowDefinition Height="*"/>
                         </Grid.RowDefinitions>
                         
                         <!-- Title -->
                         <Grid Margin="0,0,0,12">
                             <TextBlock Text="{x:Static p:Resources.TopApplications}" FontSize="16" FontWeight="SemiBold"/>
                             <TextBlock Text="See All â€º" FontSize="13" Foreground="{DynamicResource AccentBrush}" HorizontalAlignment="Right" Cursor="Hand" VerticalAlignment="Center">
                                 <TextBlock.InputBindings>
                                     <MouseBinding MouseAction="LeftClick" Command="{Binding NavigateToAppUsageCommand}"/>
                                 </TextBlock.InputBindings>
                             </TextBlock>
                         </Grid>

                         <!-- List -->
                        <ItemsControl Grid.Row="1" ItemsSource="{Binding TopApps}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Image Source="{Binding Icon}" Width="24" Height="24" Margin="0,0,12,0" RenderOptions.BitmapScalingMode="HighQuality"/>
                                        <TextBlock Grid.Column="1" Text="{Binding DisplayName}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" FontSize="13"/>
                                        <TextBlock Grid.Column="2" Text="{Binding TotalSeconds, Converter={StaticResource SecondsToTimeConverter}}" VerticalAlignment="Center" Foreground="{DynamicResource SecondaryTextBrush}" FontSize="13"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>
            </Grid>
                </Grid>
            </Border>
    </Grid>
</UserControl>


