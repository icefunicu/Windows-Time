<UserControl x:Class="ScreenTimeWin.App.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScreenTimeWin.App.Views"
             xmlns:vm="clr-namespace:ScreenTimeWin.App.ViewModels"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="900"
             Background="{DynamicResource WindowBackgroundBrush}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- é¡µé¢æ ‡é¢˜ -->
            <RowDefinition Height="Auto"/>  <!-- ç»Ÿè®¡æ‘˜è¦ -->
            <RowDefinition Height="2*"/>    <!-- ä¸»å›¾è¡¨ -->
            <RowDefinition Height="3*"/>    <!-- åº•éƒ¨åˆ†æ  -->
        </Grid.RowDefinitions>

        <!-- 1. é¡µé¢æ ‡é¢˜å’Œçª—å£æŽ§åˆ¶å›¾æ ‡ -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!-- å›¾æ ‡å’Œæ ‡é¢˜ -->
            <StackPanel Orientation="Horizontal">
                <Border Width="32" Height="32" CornerRadius="8" Background="{DynamicResource AccentBrush}" Margin="0,0,12,0">
                    <TextBlock Text="ðŸ“Š" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <TextBlock Text="Screen Time" FontSize="22" FontWeight="SemiBold" VerticalAlignment="Center" 
                           Foreground="{DynamicResource PrimaryTextBrush}"/>
            </StackPanel>
        </Grid>

        <!-- 2. ç»Ÿè®¡æ‘˜è¦åŒº -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- ä»Šæ—¥æ€»æ—¶é•¿ -->
            <StackPanel Grid.Column="0">
                <TextBlock Text="{Binding TotalTimeText}" FontSize="48" FontWeight="Bold" 
                           Foreground="{DynamicResource PrimaryTextBrush}"/>
                <StackPanel Orientation="Horizontal" Margin="2,4,0,0">
                    <TextBlock Text="Today" FontSize="14" Foreground="{DynamicResource SecondaryTextBrush}" 
                               VerticalAlignment="Center"/>
                    <!-- å¢žé•¿æ ‡ç­¾ -->
                    <Border Background="#E6F4EA" CornerRadius="4" Margin="12,0,0,0" Padding="8,3">
                        <TextBlock Text="{Binding GrowthText}" FontSize="12" FontWeight="SemiBold" 
                                   Foreground="#1E8E3E"/>
                    </Border>
                </StackPanel>
            </StackPanel>

            <!-- App åˆ‡æ¢æ¬¡æ•° -->
            <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right">
                <TextBlock Text="App switches" FontSize="14" Foreground="{DynamicResource SecondaryTextBrush}" 
                           HorizontalAlignment="Right"/>
                <TextBlock Text="{Binding AppSwitchesText}" FontSize="28" FontWeight="SemiBold" 
                           Foreground="{DynamicResource PrimaryTextBrush}" HorizontalAlignment="Right"/>
            </StackPanel>
        </Grid>

        <!-- 3. ä¸»é¢ç§¯å›¾å¡ç‰‡ -->
        <Border Grid.Row="2" Background="{DynamicResource CardBackgroundBrush}" CornerRadius="12" 
                Padding="20" Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.06" Color="#000000"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- æ ‡ç­¾é¡µåˆ‡æ¢ -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <!-- é€‰ä¸­çš„ Today æ ‡ç­¾ -->
                    <Border Background="{DynamicResource TabActiveBackgroundBrush}" CornerRadius="16" 
                            Padding="14,6" Margin="0,0,8,0" Cursor="Hand">
                        <TextBlock Text="Today" FontSize="12" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TabActiveTextBrush}"/>
                    </Border>
                    <!-- å…¶ä»–æ ‡ç­¾ -->
                    <TextBlock Text="Total Time" FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}" 
                               Margin="12,0" VerticalAlignment="Center" Cursor="Hand"/>
                    <TextBlock Text="Focus Time" FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}" 
                               Margin="12,0" VerticalAlignment="Center" Cursor="Hand"/>
                    <TextBlock Text="Entertainment" FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}" 
                               Margin="12,0" VerticalAlignment="Center" Cursor="Hand"/>
                </StackPanel>

                <!-- é¢ç§¯å›¾ -->
                <lvc:CartesianChart Grid.Row="1" Series="{Binding HourlySeries}" 
                                    XAxes="{Binding XAxes}" YAxes="{Binding YAxes}" 
                                    TooltipPosition="Top" ZoomMode="None"/>
            </Grid>
        </Border>

        <!-- 4. åº•éƒ¨åˆ†æ åŒº -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*"/>  <!-- åˆ†ç±»é¥¼å›¾ -->
                <ColumnDefinition Width="20"/>    <!-- é—´è· -->
                <ColumnDefinition Width="*"/>     <!-- Top Apps -->
            </Grid.ColumnDefinitions>

            <!-- å·¦ä¾§: Time by Category å¡ç‰‡ -->
            <Border Grid.Column="0" Background="{DynamicResource CardBackgroundBrush}" CornerRadius="12" Padding="20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.06" Color="#000000"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- æ ‡é¢˜ -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="ðŸ·ï¸" FontSize="14" Margin="0,0,8,0"/>
                        <TextBlock Text="Time by Category" FontSize="16" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource PrimaryTextBrush}"/>
                    </StackPanel>
                    
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>     <!-- å›¾ä¾‹ -->
                            <ColumnDefinition Width="1.5*"/> <!-- é¥¼å›¾ -->
                        </Grid.ColumnDefinitions>
                        
                        <!-- åŠ¨æ€åˆ†ç±»å›¾ä¾‹ -->
                        <ItemsControl ItemsSource="{Binding CategoryLegends}" VerticalAlignment="Center" Margin="0,0,10,0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,6">
                                        <Ellipse Width="10" Height="10" Fill="{Binding ColorBrush}"/>
                                        <TextBlock Text="{Binding Name}" Margin="10,0,0,0" FontSize="13"
                                                   Foreground="{DynamicResource SecondaryTextBrush}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- çŽ¯å½¢é¥¼å›¾ -->
                        <lvc:PieChart Grid.Column="1" Series="{Binding CategorySeries}" 
                                      InitialRotation="-90" LegendPosition="Hidden"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- å³ä¾§: Top Apps å¡ç‰‡ -->
            <Border Grid.Column="2" Background="{DynamicResource CardBackgroundBrush}" CornerRadius="12" Padding="0,12">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.06" Color="#000000"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- æ ‡é¢˜è¡Œ -->
                    <Grid Margin="20,6,20,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“±" FontSize="14" Margin="0,0,8,0"/>
                            <TextBlock Text="Top Apps" FontSize="16" FontWeight="SemiBold" 
                                       Foreground="{DynamicResource PrimaryTextBrush}"/>
                        </StackPanel>
                        <TextBlock Grid.Column="1" Text="â€º" FontSize="18" Foreground="{DynamicResource SecondaryTextBrush}" 
                                   Cursor="Hand" VerticalAlignment="Center"/>
                    </Grid>

                    <!-- åº”ç”¨åˆ—è¡¨ -->
                    <ListView Grid.Row="1" ItemsSource="{Binding TopApps}" 
                              BorderThickness="0" Background="Transparent" 
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              Padding="10,0">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="10,10"/>
                                <Setter Property="Margin" Value="0,2"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="8" 
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F5F5F7"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/> <!-- å›¾æ ‡ -->
                                        <ColumnDefinition Width="*"/>    <!-- åç§° -->
                                        <ColumnDefinition Width="Auto"/> <!-- æ—¶é•¿ -->
                                    </Grid.ColumnDefinitions>

                                    <!-- åº”ç”¨å›¾æ ‡ -->
                                    <Border Width="32" Height="32" CornerRadius="6" 
                                            Background="Transparent" Margin="0,0,12,0">
                                        <Image Source="{Binding Icon}" RenderOptions.BitmapScalingMode="HighQuality"/>
                                    </Border>

                                    <!-- åº”ç”¨åç§° -->
                                    <TextBlock Grid.Column="1" Text="{Binding DisplayName}" 
                                               FontWeight="Medium" FontSize="14" VerticalAlignment="Center" 
                                               TextTrimming="CharacterEllipsis" 
                                               Foreground="{DynamicResource PrimaryTextBrush}"/>

                                    <!-- ä½¿ç”¨æ—¶é•¿ -->
                                    <TextBlock Grid.Column="2" 
                                               Text="{Binding TotalSeconds, Converter={StaticResource SecondsToTimeConverter}}" 
                                               VerticalAlignment="Center" FontSize="13" 
                                               Foreground="{DynamicResource SecondaryTextBrush}"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
