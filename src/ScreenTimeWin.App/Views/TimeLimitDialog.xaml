<Window x:Class="ScreenTimeWin.App.Views.TimeLimitDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:ScreenTimeWin.App.Properties"
        mc:Ignorable="d"
        Title="{x:Static p:Resources.TimesUpTitle}" 
        Height="380" Width="320"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        ResizeMode="NoResize">
    
    <!-- 主容器 -->
    <Border Background="{DynamicResource CardBackgroundBrush}" CornerRadius="16" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="5" Opacity="0.25" Color="Black"/>
        </Border.Effect>
        
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- 标题 -->
                <RowDefinition Height="*"/>     <!-- 内容 -->
                <RowDefinition Height="Auto"/>  <!-- 按钮 -->
            </Grid.RowDefinitions>
            
            <!-- 标题 -->
            <TextBlock Text="{x:Static p:Resources.TimesUpHeader}" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"
                       Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,20"/>
            
            <!-- 内容区 -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- 应用图标 -->
                <Border Width="72" Height="72" CornerRadius="16" Background="{DynamicResource WindowBackgroundBrush}" 
                        HorizontalAlignment="Center" Margin="0,0,0,16">
                    <Image x:Name="AppIcon" Width="48" Height="48" 
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Border>
                
                <!-- 提示信息 -->
                <TextBlock x:Name="MessageText" TextWrapping="Wrap" TextAlignment="Center" 
                           FontSize="14" Foreground="{DynamicResource SecondaryTextBrush}" LineHeight="22">
                    <Run Text="{x:Static p:Resources.DailyLimitReached}"/>
                    <LineBreak/>
                    <Run x:Name="AppNameRun" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryTextBrush}">Chrome</Run>
                </TextBlock>
            </StackPanel>
            
            <!-- 按钮区 -->
            <StackPanel Grid.Row="2" Margin="0,20,0,0">
                <!-- 关闭应用按钮 -->
                <Button x:Name="CloseAppButton" Content="{x:Static p:Resources.CloseApp}" Click="CloseAppButton_Click"
                        Background="{DynamicResource ErrorBrush}" Foreground="White" FontSize="14" FontWeight="SemiBold"
                        Padding="0,14" Margin="0,0,0,10" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.9"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <!-- 额外5分钟按钮 -->
                <Button x:Name="MoreTimeButton" Content="{x:Static p:Resources.MoreTime}" Click="MoreTimeButton_Click"
                        Background="{DynamicResource CardBackgroundBrush}" Foreground="{DynamicResource PrimaryTextBrush}" FontSize="14" FontWeight="Medium"
                        Padding="0,12" Margin="0,0,0,10" Cursor="Hand"
                        BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="8" 
                                    Padding="{TemplateBinding Padding}"
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource WindowBackgroundBrush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <!-- 请求解锁按钮 -->
                <Button x:Name="RequestUnlockButton" Content="{x:Static p:Resources.RequestUnlock}" Click="RequestUnlockButton_Click"
                        Background="{DynamicResource CardBackgroundBrush}" Foreground="{DynamicResource SecondaryTextBrush}" FontSize="13"
                        Padding="0,10" Cursor="Hand"
                        BorderBrush="Transparent" BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource WindowBackgroundBrush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
