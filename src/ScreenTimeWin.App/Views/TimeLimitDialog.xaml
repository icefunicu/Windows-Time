<Window x:Class="ScreenTimeWin.App.Views.TimeLimitDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Time's Up!" 
        Height="380" Width="320"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        ResizeMode="NoResize">
    
    <!-- 主容器 -->
    <Border Background="White" CornerRadius="16" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="5" Opacity="0.25" Color="#000000"/>
        </Border.Effect>
        
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- 标题 -->
                <RowDefinition Height="*"/>     <!-- 内容 -->
                <RowDefinition Height="Auto"/>  <!-- 按钮 -->
            </Grid.RowDefinitions>
            
            <!-- 标题 -->
            <TextBlock Text="Time's Up!" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"
                       Foreground="#202124" Margin="0,0,0,20"/>
            
            <!-- 内容区 -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- 应用图标 -->
                <Border Width="72" Height="72" CornerRadius="16" Background="#F5F6F8" 
                        HorizontalAlignment="Center" Margin="0,0,0,16">
                    <Image x:Name="AppIcon" Width="48" Height="48" 
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Border>
                
                <!-- 提示信息 -->
                <TextBlock x:Name="MessageText" TextWrapping="Wrap" TextAlignment="Center" 
                           FontSize="14" Foreground="#5F6368" LineHeight="22">
                    <Run>You've reached your daily limit for</Run>
                    <LineBreak/>
                    <Run x:Name="AppNameRun" FontWeight="SemiBold" Foreground="#202124">Chrome</Run>
                </TextBlock>
            </StackPanel>
            
            <!-- 按钮区 -->
            <StackPanel Grid.Row="2" Margin="0,20,0,0">
                <!-- 关闭应用按钮 -->
                <Button x:Name="CloseAppButton" Content="Close App" Click="CloseAppButton_Click"
                        Background="#D93025" Foreground="White" FontSize="14" FontWeight="SemiBold"
                        Padding="0,14" Margin="0,0,0,10" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#C62828"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <!-- 额外5分钟按钮 -->
                <Button x:Name="MoreTimeButton" Content="More Time (5 Min)" Click="MoreTimeButton_Click"
                        Background="White" Foreground="#202124" FontSize="14" FontWeight="Medium"
                        Padding="0,12" Margin="0,0,0,10" Cursor="Hand"
                        BorderBrush="#E0E0E0" BorderThickness="1">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="8" 
                                    Padding="{TemplateBinding Padding}"
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F5F6F8"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <!-- 请求解锁按钮 -->
                <Button x:Name="RequestUnlockButton" Content="Request Unlock" Click="RequestUnlockButton_Click"
                        Background="White" Foreground="#5F6368" FontSize="13"
                        Padding="0,10" Cursor="Hand"
                        BorderBrush="Transparent" BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F5F6F8"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
