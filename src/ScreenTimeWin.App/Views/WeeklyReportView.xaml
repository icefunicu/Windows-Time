<UserControl x:Class="ScreenTimeWin.App.Views.WeeklyReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:ScreenTimeWin.App.ViewModels"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             Background="{DynamicResource WindowBackgroundBrush}">
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- æ ‡é¢˜å’Œå‘¨é€‰æ‹©å™¨ -->
            <RowDefinition Height="Auto"/>  <!-- æ€»æ—¶é—´æ‘˜è¦ -->
            <RowDefinition Height="*"/>     <!-- å›¾è¡¨åŒºåŸŸ -->
        </Grid.RowDefinitions>

        <!-- 1. æ ‡é¢˜å’Œå‘¨é€‰æ‹©å™¨ -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- æ ‡é¢˜ -->
            <StackPanel Orientation="Horizontal">
                <Border Width="32" Height="32" CornerRadius="8" Background="#1967D2" Margin="0,0,12,0">
                    <TextBlock Text="ðŸ“ˆ" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <TextBlock Text="Weekly Report" FontSize="22" FontWeight="SemiBold" VerticalAlignment="Center"
                           Foreground="{DynamicResource PrimaryTextBrush}"/>
            </StackPanel>
            
            <!-- å‘¨é€‰æ‹©å™¨ -->
            <Border Grid.Column="2" Background="{DynamicResource CardBackgroundBrush}" CornerRadius="8" Padding="12,8">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="â˜°" FontSize="14" Margin="0,0,10,0" VerticalAlignment="Center" 
                               Foreground="{DynamicResource SecondaryTextBrush}"/>
                    <TextBlock Text="{Binding WeekSelectorText}" FontSize="14" VerticalAlignment="Center"
                               Foreground="{DynamicResource PrimaryTextBrush}"/>
                    <TextBlock Text="â–¾" FontSize="10" Margin="10,0,0,0" VerticalAlignment="Center"
                               Foreground="{DynamicResource SecondaryTextBrush}"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- 2. æ€»æ—¶é—´æ‘˜è¦ -->
        <Border Grid.Row="1" Background="{DynamicResource CardBackgroundBrush}" CornerRadius="12" Padding="24" Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.06" Color="#000000"/>
            </Border.Effect>
            
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Total Screen Time" FontSize="14" Foreground="{DynamicResource SecondaryTextBrush}" 
                           VerticalAlignment="Center" Margin="0,0,16,0"/>
                <TextBlock Text="{Binding TotalScreenTimeText}" FontSize="32" FontWeight="Bold" 
                           Foreground="{DynamicResource PrimaryTextBrush}" VerticalAlignment="Center"/>
                <!-- å˜åŒ–æ ‡ç­¾ -->
                <Border Background="#E6F4EA" CornerRadius="4" Padding="10,4" Margin="16,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="{Binding ChangeText}" FontSize="13" FontWeight="SemiBold" Foreground="#1E8E3E"/>
                </Border>
                <TextBlock Text="vs Last Week" FontSize="13" Foreground="{DynamicResource SecondaryTextBrush}" 
                           VerticalAlignment="Center" Margin="8,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- 3. å›¾è¡¨åŒºåŸŸ -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- æ¯æ—¥ä½¿ç”¨æŸ±çŠ¶å›¾ -->
            <Border Grid.Row="0" Background="{DynamicResource CardBackgroundBrush}" CornerRadius="12" Padding="20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.06" Color="#000000"/>
                </Border.Effect>
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Daily Usage" FontSize="16" FontWeight="SemiBold" 
                               Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,12"/>
                    
                    <lvc:CartesianChart Grid.Row="1" Series="{Binding DailyUsageSeries}" 
                                        XAxes="{Binding DailyXAxes}" YAxes="{Binding DailyYAxes}"
                                        TooltipPosition="Top" ZoomMode="None"/>
                </Grid>
            </Border>

            <!-- åˆ†ç±»ç»†åˆ† -->
            <Border Grid.Row="2" Background="{DynamicResource CardBackgroundBrush}" CornerRadius="12" Padding="20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.06" Color="#000000"/>
                </Border.Effect>
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Category Breakdown" FontSize="16" FontWeight="SemiBold" 
                               Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,16"/>
                    
                    <ItemsControl Grid.Row="1" ItemsSource="{Binding CategoryBreakdown}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- åˆ†ç±»åç§° -->
                                    <TextBlock Text="{Binding Name}" FontSize="13" 
                                               Foreground="{DynamicResource SecondaryTextBrush}" VerticalAlignment="Center"/>
                                    
                                    <!-- è¿›åº¦æ¡ -->
                                    <Grid Grid.Column="1">
                                        <!-- èƒŒæ™¯ -->
                                        <Border Background="{DynamicResource ProgressBackgroundBrush}" 
                                                Height="18" CornerRadius="4"/>
                                        <!-- å‰æ™¯ -->
                                        <Border Background="{Binding ColorBrush}" Height="18" CornerRadius="4"
                                                HorizontalAlignment="Left">
                                            <Border.Width>
                                                <MultiBinding Converter="{StaticResource PercentageToWidthConverter}">
                                                    <Binding Path="Percentage"/>
                                                    <Binding Path="ActualWidth" RelativeSource="{RelativeSource AncestorType=Grid}"/>
                                                </MultiBinding>
                                            </Border.Width>
                                        </Border>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
