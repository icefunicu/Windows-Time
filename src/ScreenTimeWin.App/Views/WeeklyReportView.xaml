<UserControl x:Class="ScreenTimeWin.App.Views.WeeklyReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:ScreenTimeWin.App.ViewModels"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:p="clr-namespace:ScreenTimeWin.App.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             Background="{DynamicResource WindowBackgroundBrush}">
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- æ ‡é¢˜å’Œå‘¨é€‰æ‹©å™¨ -->
            <RowDefinition Height="Auto"/>  <!-- æ€»æ—¶é—´æ‘˜è¦ -->
            <RowDefinition Height="*"/>     <!-- å›¾è¡¨åŒºåŸŸ -->
        </Grid.RowDefinitions>

        <!-- 1. æ ‡é¢˜å’Œå‘¨é€‰æ‹©å™¨ -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- æ ‡é¢˜ -->
            <StackPanel Orientation="Horizontal">
                <Border Width="32" Height="32" CornerRadius="8" Background="#1967D2" Margin="0,0,12,0">
                    <TextBlock Text="ðŸ“ˆ" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <TextBlock Text="{x:Static p:Resources.WeeklyReportTitle}" FontSize="22" FontWeight="SemiBold" VerticalAlignment="Center"
                           Foreground="{DynamicResource PrimaryTextBrush}"/>
            </StackPanel>
            
            <!-- Limits Button -->
            <Button Grid.Column="2" Command="{Binding NavigateToLimitsCommand}" 
                    Content="{x:Static p:Resources.UsageLimitsTitle}"
                    Background="Transparent" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"
                    Padding="12,6" Margin="0,0,12,0" Foreground="{DynamicResource PrimaryTextBrush}" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="â±ï¸" Margin="0,0,6,0"/>
                                <ContentPresenter/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            
            <!-- å‘¨é€‰æ‹©å™¨ -->
            <Border Grid.Column="3" Background="{DynamicResource CardBackgroundBrush}" CornerRadius="8" Padding="12,8">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="â˜°" FontSize="14" Margin="0,0,10,0" VerticalAlignment="Center" 
                               Foreground="{DynamicResource SecondaryTextBrush}"/>
                    <TextBlock Text="{Binding WeekSelectorText}" FontSize="14" VerticalAlignment="Center"
                               Foreground="{DynamicResource PrimaryTextBrush}"/>
                    <TextBlock Text="â–¾" FontSize="10" Margin="10,0,0,0" VerticalAlignment="Center"
                               Foreground="{DynamicResource SecondaryTextBrush}"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- 2. Summary Card -->
        <Border Grid.Row="1" Style="{DynamicResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Main Stats -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="â±ï¸" FontSize="20" Margin="0,0,12,0" VerticalAlignment="Center"/>
                    <TextBlock Text="{x:Static p:Resources.TotalScreenTime}" FontSize="15" Foreground="{DynamicResource SecondaryTextBrush}" VerticalAlignment="Center" Margin="0,0,16,0"/>
                    <TextBlock Text="{Binding TotalScreenTimeText}" FontSize="32" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextBrush}" VerticalAlignment="Center"/>
                    
                    <!-- Change Tag -->
                    <Border Background="{Binding ChangeBrush, FallbackValue=#E6F4EA}" CornerRadius="12" Padding="12,4" Margin="16,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="{Binding ChangeText}" FontSize="13" FontWeight="Bold" Foreground="#1E8E3E"/>
                    </Border>
                    <TextBlock Text="{x:Static p:Resources.ComparedToLastWeek}" FontSize="13" Foreground="{DynamicResource SecondaryTextBrush}" VerticalAlignment="Center" Margin="8,0,0,0"/>
                </StackPanel>
                
                <!-- Insights -->
                <Grid Grid.Row="1" Margin="0,24,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Daily Average -->
                    <Border Grid.Column="0" Background="{DynamicResource BackgroundBrush}" CornerRadius="8" Padding="16" Margin="0,0,12,0">
                        <StackPanel>
                            <TextBlock Text="{x:Static p:Resources.DailyAverage}" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource SecondaryTextBrush}"/>
                            <TextBlock Text="{Binding DailyAverageText}" FontSize="20" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Peak Day -->
                    <Border Grid.Column="1" Background="{DynamicResource BackgroundBrush}" CornerRadius="8" Padding="16" Margin="0,0,12,0">
                        <StackPanel>
                            <TextBlock Text="{x:Static p:Resources.PeakDay}" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource SecondaryTextBrush}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                <TextBlock Text="{Binding PeakDayText}" FontSize="20" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryTextBrush}"/>
                                <TextBlock Text="{Binding PeakDayTimeText, StringFormat='({0})'}" FontSize="14" Foreground="{DynamicResource SecondaryTextBrush}" VerticalAlignment="Bottom" Margin="6,0,0,2"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Most Productive -->
                    <Border Grid.Column="2" Background="{DynamicResource BackgroundBrush}" CornerRadius="8" Padding="16">
                        <StackPanel>
                            <TextBlock Text="{x:Static p:Resources.MostProductiveDay}" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource SecondaryTextBrush}"/>
                            <TextBlock Text="{Binding MostProductiveDayText}" FontSize="20" FontWeight="SemiBold" Foreground="#1E8E3E" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Border>

            <!-- 3. Charts Area -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Daily Usage Chart -->
                <Border Grid.Row="0" Style="{DynamicResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Text="{x:Static p:Resources.DailyUsage}" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,16"/>
                        
                        <lvc:CartesianChart Grid.Row="1" Series="{Binding DailyUsageSeries}" 
                                            XAxes="{Binding DailyXAxes}" YAxes="{Binding DailyYAxes}"
                                            TooltipPosition="Top" ZoomMode="None"/>
                    </Grid>
                </Border>

                <!-- Category Breakdown -->
                <Border Grid.Row="2" Style="{DynamicResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Text="{x:Static p:Resources.CategoryStats}" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,16"/>
                        
                        <ItemsControl Grid.Row="1" ItemsSource="{Binding CategoryBreakdown}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Category Name -->
                                        <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="Medium" Foreground="{DynamicResource SecondaryTextBrush}" VerticalAlignment="Center"/>
                                        
                                        <!-- Progress Bar -->
                                        <Grid Grid.Column="1">
                                            <!-- Track -->
                                            <Border Background="{DynamicResource ProgressBackgroundBrush}" Height="12" CornerRadius="6"/>
                                            <!-- Indicator -->
                                            <Border Background="{Binding ColorBrush}" Height="12" CornerRadius="6" HorizontalAlignment="Left">
                                                <Border.Width>
                                                    <MultiBinding Converter="{StaticResource PercentageToWidthConverter}">
                                                        <Binding Path="Percentage"/>
                                                        <Binding Path="ActualWidth" RelativeSource="{RelativeSource AncestorType=Grid}"/>
                                                    </MultiBinding>
                                                </Border.Width>
                                            </Border>
                                        </Grid>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>
            </Grid>
    </Grid>
</UserControl>
