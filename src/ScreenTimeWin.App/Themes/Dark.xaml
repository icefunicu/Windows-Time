<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Dark Theme Colors - 深色主题 -->
    
    <!-- 基础颜色 -->
    <Color x:Key="WindowBackgroundColor">#1E1E1E</Color>
    <Color x:Key="CardBackgroundColor">#2D2D2D</Color>
    <Color x:Key="PrimaryTextColor">#E8EAED</Color>
    <Color x:Key="SecondaryTextColor">#9AA0A6</Color>
    <Color x:Key="AccentColor">#8AB4F8</Color>
    
    <!-- 分类颜色（适配深色背景) -->
    <Color x:Key="CategoryWorkColor">#8AB4F8</Color>
    <Color x:Key="CategorySocialColor">#81C995</Color>
    <Color x:Key="CategoryEntertainmentColor">#F28B82</Color>
    <Color x:Key="CategoryLearningColor">#8AB4F8</Color>
    <Color x:Key="CategorySystemColor">#9AA0A6</Color>
    <Color x:Key="CategoryOtherColor">#FDD663</Color>
    
    <!-- 状态颜色 -->
    <Color x:Key="SuccessColor">#81C995</Color>
    <Color x:Key="WarningColor">#FDD663</Color>
    <Color x:Key="ErrorColor">#F28B82</Color>
    
    <!-- 边框和分隔线 -->
    <Color x:Key="BorderColor">#3C4043</Color>
    <Color x:Key="DividerColor">#3C4043</Color>
    
    <!-- 图表渐变颜色 -->
    <Color x:Key="ChartPrimaryColor">#8AB4F8</Color>
    <Color x:Key="ChartPrimaryLightColor">#8AB4F864</Color>
    
    <!-- 进度条颜色 -->
    <Color x:Key="ProgressBackgroundColor">#3C4043</Color>
    
    <!-- 标签页背景 -->
    <Color x:Key="TabActiveBackgroundColor">#394457</Color>
    <Color x:Key="TabActiveTextColor">#8AB4F8</Color>
    
    <!-- 常用画刷 -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBackgroundColor}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackgroundColor}"/>
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="DividerBrush" Color="{StaticResource DividerColor}"/>
    
    <SolidColorBrush x:Key="CategoryWorkBrush" Color="{StaticResource CategoryWorkColor}"/>
    <SolidColorBrush x:Key="CategorySocialBrush" Color="{StaticResource CategorySocialColor}"/>
    <SolidColorBrush x:Key="CategoryEntertainmentBrush" Color="{StaticResource CategoryEntertainmentColor}"/>
    <SolidColorBrush x:Key="CategoryLearningBrush" Color="{StaticResource CategoryLearningColor}"/>
    <SolidColorBrush x:Key="CategorySystemBrush" Color="{StaticResource CategorySystemColor}"/>
    <SolidColorBrush x:Key="CategoryOtherBrush" Color="{StaticResource CategoryOtherColor}"/>
    
    <SolidColorBrush x:Key="ProgressBackgroundBrush" Color="{StaticResource ProgressBackgroundColor}"/>
    <SolidColorBrush x:Key="TabActiveBackgroundBrush" Color="{StaticResource TabActiveBackgroundColor}"/>
    <SolidColorBrush x:Key="TabActiveTextBrush" Color="{StaticResource TabActiveTextColor}"/>
</ResourceDictionary>
