<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Light Theme Colors - 浅色主题 -->
    
    <!-- 基础颜色 -->
    <Color x:Key="WindowBackgroundColor">#F5F6F8</Color>
    <Color x:Key="CardBackgroundColor">White</Color>
    <Color x:Key="PrimaryTextColor">#202124</Color>
    <Color x:Key="SecondaryTextColor">#5F6368</Color>
    <Color x:Key="AccentColor">#1967D2</Color>
    
    <!-- 分类颜色（匹配原型图） -->
    <Color x:Key="CategoryWorkColor">#4285F4</Color>
    <Color x:Key="CategorySocialColor">#34A853</Color>
    <Color x:Key="CategoryEntertainmentColor">#EA4335</Color>
    <Color x:Key="CategoryLearningColor">#4285F4</Color>
    <Color x:Key="CategorySystemColor">#9AA0A6</Color>
    <Color x:Key="CategoryOtherColor">#FBBC05</Color>
    
    <!-- 状态颜色 -->
    <Color x:Key="SuccessColor">#1E8E3E</Color>
    <Color x:Key="WarningColor">#F9AB00</Color>
    <Color x:Key="ErrorColor">#D93025</Color>
    
    <!-- 边框和分隔线 -->
    <Color x:Key="BorderColor">#E0E0E0</Color>
    <Color x:Key="DividerColor">#EEEEEE</Color>
    
    <!-- 图表渐变颜色 -->
    <Color x:Key="ChartPrimaryColor">#007AFF</Color>
    <Color x:Key="ChartPrimaryLightColor">#007AFF64</Color>
    
    <!-- 进度条颜色 -->
    <Color x:Key="ProgressBackgroundColor">#E8EAED</Color>
    
    <!-- 标签页背景 -->
    <Color x:Key="TabActiveBackgroundColor">#E8F0FE</Color>
    <Color x:Key="TabActiveTextColor">#1967D2</Color>
    
    <!-- 常用画刷 -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBackgroundColor}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackgroundColor}"/>
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="DividerBrush" Color="{StaticResource DividerColor}"/>
    
    <SolidColorBrush x:Key="CategoryWorkBrush" Color="{StaticResource CategoryWorkColor}"/>
    <SolidColorBrush x:Key="CategorySocialBrush" Color="{StaticResource CategorySocialColor}"/>
    <SolidColorBrush x:Key="CategoryEntertainmentBrush" Color="{StaticResource CategoryEntertainmentColor}"/>
    <SolidColorBrush x:Key="CategoryLearningBrush" Color="{StaticResource CategoryLearningColor}"/>
    <SolidColorBrush x:Key="CategorySystemBrush" Color="{StaticResource CategorySystemColor}"/>
    <SolidColorBrush x:Key="CategoryOtherBrush" Color="{StaticResource CategoryOtherColor}"/>
    
    <SolidColorBrush x:Key="ProgressBackgroundBrush" Color="{StaticResource ProgressBackgroundColor}"/>
    <SolidColorBrush x:Key="TabActiveBackgroundBrush" Color="{StaticResource TabActiveBackgroundColor}"/>
    <SolidColorBrush x:Key="TabActiveTextBrush" Color="{StaticResource TabActiveTextColor}"/>
</ResourceDictionary>
