<Window x:Class="ScreenTimeWin.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenTimeWin.App"
        xmlns:vm="clr-namespace:ScreenTimeWin.App.ViewModels"
        xmlns:views="clr-namespace:ScreenTimeWin.App.Views"
        xmlns:props="clr-namespace:ScreenTimeWin.App.Properties"
        mc:Ignorable="d"
        Title="Screen Time" Height="600" Width="900"
        Closing="Window_Closing"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource WindowBackgroundBrush}">
    
    <Window.Resources>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
            <views:DashboardView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AnalyticsViewModel}">
            <views:AnalyticsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:LimitsViewModel}">
            <views:LimitsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:FocusViewModel}">
            <views:FocusView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
            <views:SettingsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:WeeklyReportViewModel}">
            <views:WeeklyReportView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AppUsageDetailViewModel}">
            <views:AppUsageDetailView />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Background="{DynamicResource CardBackgroundBrush}" Padding="10">
            <StackPanel>
                <TextBlock Text="ScreenTime" FontSize="20" FontWeight="Bold" Margin="10,10,10,30" Foreground="{DynamicResource AccentBrush}"/>
                
                <RadioButton Content="{x:Static props:Resources.Dashboard}" Style="{DynamicResource NavButtonStyle}" Command="{Binding NavigateToDashboardCommand}" IsChecked="True"/>
                <RadioButton Content="{x:Static props:Resources.Analytics}" Style="{DynamicResource NavButtonStyle}" Command="{Binding NavigateToAnalyticsCommand}"/>
                <RadioButton Content="{x:Static props:Resources.Limits}" Style="{DynamicResource NavButtonStyle}" Command="{Binding NavigateToLimitsCommand}"/>
                <RadioButton Content="{x:Static props:Resources.Focus}" Style="{DynamicResource NavButtonStyle}" Command="{Binding NavigateToFocusCommand}"/>
                <RadioButton Content="{x:Static props:Resources.Settings}" Style="{DynamicResource NavButtonStyle}" Command="{Binding NavigateToSettingsCommand}"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Border Grid.Column="1" Background="{DynamicResource WindowBackgroundBrush}" Padding="20">
            <Grid>
                <ContentControl Content="{Binding CurrentView}" />

                <!-- Notification Overlay -->
                <Border VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,20,20,0" 
                        Background="#333333" CornerRadius="4" Padding="15,10"
                        Visibility="{Binding IsNotificationVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel>
                         <TextBlock Text="{Binding NotificationMessage}" Foreground="White" TextWrapping="Wrap" MaxWidth="300"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
